<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="@dimen/item_category_width_card"
        android:layout_height="@dimen/item_category_height_card"
        app:cardCornerRadius="@dimen/corner_radius_super_large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/badgeImageView"
            android:layout_width="@dimen/item_category_badge_width"
            android:layout_height="@dimen/item_category_badge_height"
            android:layout_gravity="center"
            tools:srcCompat="@drawable/ic_search_cube" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/categoryNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/item_category_name_margin_top"
        tools:text="Phones"
        android:textSize="@dimen/item_category_name_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView" />


</androidx.constraintlayout.widget.ConstraintLayout>